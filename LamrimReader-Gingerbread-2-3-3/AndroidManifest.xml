<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eyes.blue"
    android:versionCode="126"
    android:versionName="1.1.126" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleInstance"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="eyes.blue.SpeechMenuActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >

            <!-- android:screenOrientation="portrait" > -->

        </activity>
        <activity
            android:name="eyes.blue.LamrimReaderActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eyes.blue.StorageManageActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_storage_manage"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="eyes.blue.FileDialogActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_file_dialog"
            android:screenOrientation="landscape" >
        </activity>

        <receiver android:name="eyes.blue.MediaPlayerController$RemoteControlReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <activity
            android:name="eyes.blue.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest> <!-- android:screenOrientation="landscape" -->
<!-- android:configChanges="orientation|keyboardHidden" -->


